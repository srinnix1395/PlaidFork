<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="toolbarHomeFragment" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title" tools:targetApi="lollipop">
    <item name="android:elevation">2dp</item>
    <item name="android:background">@null</item>
    <item name="android:titleTextAppearance">@style/TextAppearance.ToolbarTitleSmallCaps</item>
    <item name="android:theme">@android:style/ThemeOverlay.Material.Dark</item>
  </style>

  <style name="TextAppearance.ToolbarTitleSmallCaps" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title" tools:targetApi="lollipop">
    <item name="android:textColor">#fff</item>
    <item name="android:fontFeatureSettings">smcp</item>
    <item name="android:letterSpacing">0.2</item>
  </style>
</resources>
